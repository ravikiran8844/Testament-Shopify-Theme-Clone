<div class="img-txt_card">
  {% render 'image', class: 'img-txt_image', mobileSrc: section.settings.img-txt_image, desktopSrc: section.settings.img-txt_image, %}
  <div class="img-txt_text_card">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <div>
      <a class="button {{section.settings.button_style}}" href="{{section.settings.button_link}}">
        {{ section.settings.button_label }}
      </a>
    </div>
  </div>
</div>

<style>
  .img-txt_card {
    display: flex;
  }
  .img-txt_image {
    width: 50%;
  }
  .img-txt_text_card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    background-color: #ECF1F5;
    padding: 20px;
  }
  .img-txt_text_card h4 {
    font-size: 28px;
  }
  .img-txt_text_card h2 {
    font-size: 52px;
  }

  @media screen and (max-width:749px) {
    .img-txt_card {
      display: block;
    }
    .img-txt_text_card {
      display: block;
      width: 100%;
    }
  }
</style>

{% schema %}
  {
    "name": "Image With Text",
    "class": "img-txt",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "img-txt_image",
        "label": "Image",
        "info": "1400 x 1400px recommended"
      },
      {
        "type": "radio",
        "id": "desktop_image_position",
        "label": "Image position (desktop)",
        "options": [
          {
            "label": "Left",
            "value": "left"
          }, {
            "label": "Right",
            "value": "right"
          }
        ],
        "default": "left"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "options": [
          {
            "label": "Left",
            "value": "left"
          }, {
            "label": "Center",
            "value": "center"
          }, {
            "label": "Right",
            "value": "right"
          }
        ],
        "default": "center"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "About Company"
      }, {
        "type": "header",
        "content": "BUTTONS"
      }, {
        "type": "product",
        "label": "Button link",
        "id": "button_link"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Our Products"
      }, {
        "type": "select",
        "id": "button_style",
        "label": "Button Style",
        "options": [
          {
            "label": "Primary",
            "value": "button--primary"
          }, {
            "value": "button--secondary",
            "label": "Secondary"
          }
        ],
        "default": "button--primary"
      }
    ],
    "presets": [
      {
        "name": "Image With Text"
      }
    ]
  }
{% endschema %}